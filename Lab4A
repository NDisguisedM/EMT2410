#include <iostream>
#include<string>
using namespace std;

int main(){
    string StudentNames[5];        //storage for student names
    char* FirstNamePtr = nullptr;  //pointer for sorting first names
    char* LastNamePtr = nullptr;   //pointer for sorting last names
    string FirstNameStorageArray[5], LastNameStorageArray[5]; //strings to use for finrst/last name separation
    int NameLengths[5];            //store lenghts of names
    cout << "Enter 5 student's names (First name, then last name):" << endl;
    
  for(int i=0; i<5; i++)
    {
      getline(cin, StudentNames[i]);
    }
  
    for(int i=0; i<5; i++){
        cout << StudentNames[i] << endl; //print names
    }

    for(int i=0; i<5; i++){
        NameLengths[i] = StudentNames[i].length(); //get length of names
    }
    
  for(int i=0; i<5; i++)
  {
    FirstNamePtr = (char *) StudentNames[i].c_str();
    cout << "The " << i+1 << "th student's full name is: " << FirstNamePtr << endl;
    for(int j=0; j<NameLengths[i]; j++)
    { 
      
      if(*(FirstNamePtr+j) == ' ')
      {    
        FirstNamePtr[j] = '\0';   
        LastNamePtr = &(FirstNamePtr[j+1]); 
        }
      }
    cout << FirstNamePtr << " " << LastNamePtr << endl;
    FirstNameStorageArray[i] = FirstNamePtr;
    LastNameStorageArray[i] = LastNamePtr;
    cout << "The " << i+1 << "th student's first name is: " << FirstNameStorageArray[i] << endl;
    cout << "The " << i+1 << "th student's last name is: " << LastNameStorageArray[i] << endl;
    }
    
  void sortNamesByAlphabet(string*, string*);
    
  sortNamesByAlphabet(FirstNameStorageArray, LastNameStorageArray);
   
  cout << "\nSort by Last name are: " << endl;
    
  for(int i=0; i<5; i++)
    {
        cout << FirstNameStorageArray[i] << " " << LastNameStorageArray[i] << endl;
    }
  
    return 0;
}
void sortNamesByAlphabet(string FirstNameStorageArray[], string LastNameStorageArray[]) 
{
  for(int i=0; i<5; i++)
  {
    for(int j=i+1; j<5; j++)
    {
      if(LastNameStorageArray[i]>LastNameStorageArray[j]) //compare ASCII codes and replace
      {
        string exchanger = LastNameStorageArray[i]; 
        LastNameStorageArray[i] = LastNameStorageArray[j];
        LastNameStorageArray[j] = exchanger;
        exchanger = FirstNameStorageArray[i];
        FirstNameStorageArray[i] = FirstNameStorageArray[j];
        FirstNameStorageArray[j] = exchanger;
      }
    }
  }
}
